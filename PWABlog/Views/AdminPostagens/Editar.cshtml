@using PWABlog.ViewModels.Admin
@model PWABlog.ViewModels.Admin.AdminPostagensEditarViewModel

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Edição de Postagem</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>

    <div class="card-body">
        @if (@Model.Erro != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h5><i class="icon fas fa-ban"></i> Erro!</h5>
                @Model.Erro
            </div>
        }

        <form action="/admin/postagens/editar" method="post">
            <div class="form-group mb-3">
                <label for="Nome">Titulo</label>
                <input id="Nome" name="Nome" type="text" class="form-control" value="@Model.NomePostagem">
            </div>

            <div class="form-group mb-3">
                <label for="descricao">Descrição</label>
                <input id="descricao" name="descricao" type="text" class="form-control" value="@Model.NomePostagem">
            </div>

            <div class="form-group mb-3">
                <label for="data">Data</label>
                <input id="data" name="data" type="date" class="form-control" value="@Model.DataPostagem">
            </div>

            <div class="form-group mb-3">
                <label for="CategoriaId">Categoria</label>
                <select id="CategoriaId" name="CategoriaId" class="form-control">
                    <option value="">Selecione</option>
                    @foreach (CategoriaAdminPostagens categoria in Model.Categorias)
                    {
                        @if (@Model.IdCategoriaPostagem == categoria.IdCategorias)
                        {
                            <option selected value="@categoria.IdCategorias">@categoria.NomeCategorias</option>
                        }
                        else
                        {
                            <option value="@categoria.IdCategorias">@categoria.NomeCategorias</option>
                        }
                    }
                </select>
            </div>

            <div class="form-group mb-3">
                <label for="AutorId">Autores</label>
                <select id="AutorId" name="AutorId" class="form-control">
                    <option value="">Selecione</option>
                    @foreach (AutorAdminPostagens autor in Model.Autores)
                    {
                        @if (@Model.IdAutorPostagem == autor.IdAutores)
                        {
                            <option selected value="@autor.IdAutores">@autor.NomeAutores</option>
                        }
                        else
                        {
                            <option value="@autor.IdAutores">@autor.NomeAutores</option>
                        }
                    }
                </select>
            </div>

            <div class="form-group mb-3">
                <label for="idEtiqueta">Etiquetas:</label>
                <select id="IdEtiqueta" name="IdEtiqueta" class="form-control">
                    <option value="">Selecione</option>
                    @foreach (EtiquetaAdminPostagens etiqueta in @Model.Etiquetas)
                    {
                        @if (@Model.IdEtiquetaPostagem == etiqueta.IdEtiqueta)
                        {
                            <option selected value="@etiqueta.IdEtiqueta">@etiqueta.NomeEtiqueta</option>
                        }
                        else
                        {
                            <option value="@etiqueta.IdEtiqueta">@etiqueta.NomeEtiqueta</option>
                        }
                    }
                </select>
            </div>

            <div class="form-group mb-3">
                <label for="Texto">Texo:</label>
                <textarea name="Texto" id="Texto" cols="30" rows="10" style="width:100%;"></textarea>
            </div>

            <div class="form-group mb-3">
                <input type="hidden" name="Id" value="@Model.IdPostagem">
                <button type="submit" class="btn btn-primary btn-block">Confirmar</button>
                <p class="text-center mt-3">
                    <a href="/admin/postagens">Cancelar</a>
                </p>
            </div>

        </form>
    </div>
</div>